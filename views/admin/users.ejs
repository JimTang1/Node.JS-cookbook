<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/users.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

<main>
<h1>Users</h1>
<div class="user-container">
    <% users.forEach(user => { %>
        <div>
        <% if (user.IsAdmin) { %>
            <button type="button" class="btn btn-danger removeAdmin" data-id="<%=user.Id%>"> Remove Admin </button>
        <% } else { %>
            <button type="button" class="btn btn-danger makeAdmin" data-id="<%=user.Id%>"> Make Admin </button>
        <% } %>
        <span><%=user.FirstName%> <%=user.LastName%></span>
        <h5>Email: <%=user.Email%></h5>
        </div>
    <% }); %> 
</div>
<br>
</main>
<script src="/js/admin-users.js"></script>    
<%- include('../includes/end.ejs') %>