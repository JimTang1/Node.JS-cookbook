<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/searchRecipes.css">
</head>
<style type="text/css">
  .card-img-top {
    position: relative;
    width: 100%;
    height: 200px;
    margin: 0 auto;
    overflow: hidden;
  }

  .card-img-top img {
    width: 100%;
  }
</style>

<body>
  <%- include('includes/navigation.ejs') %>
  <div class="card-container">
    <div class="card-deck">
      <% recipeList.forEach(recipe => { %>
      <div class="card d-flex align-items-center justify-content-center hoverCard">
        <img class="card-img-top" src="<%=recipe.ImageUrl %>" alt="<%=recipe.Name %>">
        <div class="card-body">
          <h5 class="card-title"><%=recipe.Name %></h5>
          <p class="card-text"><%=recipe.Description %></p>
          <br>
          <a href="/recipes?id=<%=recipe.CategoryId %>&recipeId=<%=recipe.Id%>" class="btn btn-primary">View Recipe</a>

        </div>
      </div>
      <br>
      <% }); %>
    </div>
  </div>
  <br>

  <%- include('includes/end.ejs') %>